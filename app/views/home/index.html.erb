                    <div class="small-12 medium-10 large-8 columns">
                      <%= form_for(Member.new, :url => email_signup_members_path, :remote => true, "data-abide" => "data-abide") do |f| %>
                          <label>
                              Name
                              <%= f.text_field :name, "required pattern" => "[a-zA-Z]+" %>
                          </label>

